<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whut.lostandfoundforwhut.mapper.ItemTagMapper">
    <resultMap id="ItemTagResultMap" type="com.whut.lostandfoundforwhut.model.entity.ItemTag">
        <result column="item_id" property="itemId"/>
        <result column="tag_id" property="tagId"/>
    </resultMap>

    <delete id="deleteByItemId">
        DELETE FROM item_tags WHERE item_id = #{itemId}
    </delete>

    <insert id="insertBatch">
        INSERT INTO item_tags (item_id, tag_id)
        VALUES
        <foreach collection="items" item="item" separator=",">
            (#{item.itemId}, #{item.tagId})
        </foreach>
    </insert>
</mapper>
