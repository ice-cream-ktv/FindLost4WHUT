<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whut.lostandfoundforwhut.mapper.TagMapper">
    <resultMap id="TagResultMap" type="com.whut.lostandfoundforwhut.model.entity.Tag">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="selectNamesByItemId" resultType="java.lang.String">
        SELECT t.name
        FROM tags t
        INNER JOIN item_tags it ON t.id = it.tag_id
        WHERE it.item_id = #{itemId}
        ORDER BY t.id
    </select>

    <select id="selectNamesByItemIds" resultType="com.whut.lostandfoundforwhut.model.dto.ItemTagNameDTO">
        SELECT it.item_id AS itemId, t.name AS name
        FROM item_tags it
        INNER JOIN tags t ON t.id = it.tag_id
        WHERE it.item_id IN
        <foreach collection="itemIds" item="itemId" open="(" separator="," close=")">
            #{itemId}
        </foreach>
        ORDER BY it.item_id, t.id
    </select>
</mapper>
