<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whut.lostandfoundforwhut.mapper.ItemImageMapper">
    <resultMap id="ItemImageResultMap" type="com.whut.lostandfoundforwhut.model.entity.ItemImage">
        <result column="item_id" property="itemId"/>
        <result column="image_id" property="imageId"/>
    </resultMap>
    
    <!-- 根据物品ID获取图片列表（包含URL） -->
    <select id="getImagesByItemId" resultType="com.whut.lostandfoundforwhut.model.entity.Image">
        SELECT i.id, i.url FROM images i
        JOIN item_images ii ON i.id = ii.image_id
        WHERE ii.item_id = #{itemId}
    </select>
    
    <!-- 根据物品ID获取图片URL列表 -->
    <select id="getImageUrlsByItemId" resultType="java.lang.String">
        SELECT i.url FROM images i
        JOIN item_images ii ON i.id = ii.image_id
        WHERE ii.item_id = #{itemId}
    </select>
    
    <!-- 根据物品ID获取图片ID列表 -->
    <select id="getImageIdsByItemId" resultType="java.lang.Long">
        SELECT image_id FROM item_images
        WHERE item_id = #{itemId}
    </select>
    
    <!-- 批量插入物品-图片关联 -->
    <insert id="insertItemImages" parameterType="map">
        INSERT INTO item_images (item_id, image_id)
        VALUES
        <foreach collection="imageIds" item="imageId" separator=",">
            (#{itemId}, #{imageId})
        </foreach>
    </insert>
    
    <!-- 根据物品ID删除物品-图片关联 -->
    <delete id="deleteByItemId" parameterType="java.lang.Long">
        DELETE FROM item_images WHERE item_id = #{itemId}
    </delete>
    
    <!-- 批量删除物品-图片关联 -->
    <delete id="deleteItemImages" parameterType="map">
        DELETE FROM item_images 
        WHERE item_id = #{itemId} 
        AND image_id IN 
        <foreach collection="imageIds" item="imageId" open="(" separator="," close=")">
            #{imageId}
        </foreach>
    </delete>
    
    <!-- 根据图片ID删除所有关联关系 -->
    <delete id="deleteAllItemImagesByImageIds" parameterType="list">
        DELETE FROM item_images 
        WHERE image_id IN 
        <foreach collection="list" item="imageId" open="(" separator="," close=")">
            #{imageId}
        </foreach>
    </delete>
</mapper>
